<section class="events">

  <!-- today -->
  <div class="wrapper white-box">
    <header class="colored green">
      <hgroup>
        <h2>Today</h2>
      </hgroup>
    </header>

    <%= render 'order', order: @order %>
  </div><!-- .wrapper -->

  <!-- this week -->
  <div class="wrapper white-box">
    <header class="colored yellow">
      <hgroup>
        <h2>This week</h2>
      </hgroup>
    </header>

    <% @roster.each do |order| %>
      <%= render 'order', order: order %>
    <% end %>
  </div><!-- .wrapper -->

</section><!-- .events -->
